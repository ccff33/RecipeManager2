{% extends '::base.html.twig' %}

{% block nav %}
    <ul>
        <li><a href="{{ path('recipe') }}">Home</a></li>
    </ul>
{% endblock %}

{% block content_header %}
    <h1>Recipe</h1>
{% endblock %}

{% block content %}
<table id="record">
    <tbody>
        <tr>
            <th>id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>description</th>
            <td>{{ entity.description }}</td>
        </tr>
        <tr>
            <th>ingredients</th>
            <td>
                {% for ingredient in entity.ingredients %}
                    <a href="{{ path('ingredient_show', { id: ingredient.id}) }}">
                        {{ ingredient.name }}
                    </a>
                {% endfor %}
            </td>
        </tr>
    </tbody>
</table>
{% if entity.creator == app.user %}
    <a href="{{ path('recipe_edit', { 'id': entity.id }) }}">Edit</a>
{% endif %}
{% endblock %}