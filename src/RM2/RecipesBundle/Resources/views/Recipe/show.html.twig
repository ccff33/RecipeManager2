{% extends '::base.html.twig' %}

{% block content_header %}
    <h1>Recipe</h1>
{% endblock %}

{% block content %}
<table class="record_properties">
    <tbody>
        <tr>
            <th>id</th>
            <td>{{ entity.id }}</td>
        </tr>
        <tr>
            <th>name</th>
            <td>{{ entity.name }}</td>
        </tr>
        <tr>
            <th>description</th>
            <td>{{ entity.description }}</td>
        </tr>
    </tbody>
</table>

<ul class="record_actions">
    <li>
        <a href="{{ path('recipe') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('recipe_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
</ul>
{% endblock %}