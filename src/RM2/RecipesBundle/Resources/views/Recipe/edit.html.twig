{% extends '::base.html.twig' %}

{% block content_header %}
    <h1>Recipe edit</h1>
{% endblock %}

{% block content %}
<center>
<form action="{{ path('recipe_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
    {{ form_widget(edit_form) }}
    <p>
        <button type="submit">Edit</button>
    </p>
</form>

<ul class="record_actions">
    <li>
        <a href="{{ path('recipe') }}">
            Back to the list
        </a>
    </li>
</ul>
</center>
{% endblock %}