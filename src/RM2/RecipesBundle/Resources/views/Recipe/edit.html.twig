{% extends '::base.html.twig' %}

{% block nav %}
<ul>
    <li>
        <a href="{{ path('recipe') }}">Home</a>
    </li>
</ul>
{% endblock %}

{% block content_header %}
    <h1>Recipe edit</h1>
{% endblock %}
    
{% block content %}
<div id="record">
    <form action="{{ path('recipe_update', { 'id': entity.id }) }}" method="post" {{ form_enctype(edit_form) }}>
        {{ form_widget(edit_form) }}
        <p>
            <button type="submit">Edit</button>
        </p>
    </form>
    <a href="{{ path('ingredient_new') }}">Miss an Ingredient?</a>
</div>
{% endblock %}